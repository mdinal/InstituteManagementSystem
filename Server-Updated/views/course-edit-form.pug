extends layout

block content
  // breadcrumb start
  .ui.big.breadcrumb
    a.section Home
    i.right.chevron.icon.divider
    a.section Courses
    i.right.chevron.icon.divider
    .active.section Edit Course
  // breadcrumb end
  h1#ttt.heading-secondary Edit Course
  p.mb-normal
    | You can edit a new course to the system using this page. Please note that filling out all the fields marked with asterics is
    | mandatory, and the ones without any symbol is optional to filling in.
  div.carded
    // form start
    form.ui.form(action='/courses/edit', method='POST')
      label.ui.label.green.tag.mb-normal Basic Information
      .field.required
        label Course Id
        input(name='id' autofocus='' required='' type='text' value=course.id)
      .field.required
        label Title
        input(name='title' autofocus='' required='' type='text' value=course.title)
      .field.required
        label Description
        textarea(name="description", cols="30", rows="1" required='') #{course.description}
      .field.required
        label Duration
        input(name='duration' required='' type='text' value=course.duration)
      .field.required
        label Level
        input(name='level' required='' type='text' value=course.level)
      .field.required
        label Maximum Students
        input(name='maximumStudents' required='' type='text' value=course.maximumStudents)
      button.ui.button.mb-large.blue(type='submit') Save Course
  // form end
