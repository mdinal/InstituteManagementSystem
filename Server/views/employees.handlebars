  <a class="section">Home</a>
  <i class="right chevron icon divider"></i>
  <div class="active section">Employees</div>
</div>
<!-- breadcrumb end -->
<!-- action buttons -->
<span>
  <br>
  <br>
  <a href="employees/new" class="card-button">Add Entry</a>
  <a href="#" class="card-button">Reporting</a>
  <a href="attendance.html" class="card-button">Attendance</a>
  <a href="#" class="card-button">Leaves</a>
  <div style="display: flex;">
    <h3 class="heading-tertiary" style="margin-right: 1rem; margin-top: .5rem;">All</h3>
    <div class="ui search">
      <div class="ui icon input">
        <input class="prompt" placeholder="Find students..." type="text">
        <i class="search icon"></i>
      </div>
      <div class="results"></div>
    </div>
  </div>
