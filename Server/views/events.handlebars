<!-- breadcrumb start -->
<div class="ui big breadcrumb">
  <a class="section">Home</a>
  <i class="right chevron icon divider"></i>
  <div class="active section">Events</div>
</div>
<!-- breadcrumb end -->
<!-- action buttons -->
<span>
  <br>
  <br>
  <a href="events/new" class="card-button">Add Entry</a>
  <a href="event-form.html" class="card-button">Reporting</a>
  <a href="event-form.html" class="card-button">Findings!</a>
  <a href="event-form.html" class="card-button">Illustrates</a>
  <div style="display: flex;">
    <h3 class="heading-tertiary" style="margin-right: 1rem; margin-top: .5rem;">All</h3>
    <div class="ui search">
      <div class="ui icon input">
        <input class="prompt" placeholder="Find students..." type="text">
        <i class="search icon"></i>
      </div>
      <div class="results"></div>
    </div>
  </div>
</span>
<!-- action buttons end -->
<!-- table start -->
<table class="ui table">
  <thead>
    <tr>
      <th>Event</th>
      <th>DateTime</th>
      <th>Description</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each events}}
    <tr>
      <td>
        <h4 class="ui image header">
          <img src="img/avatars/avatar2.png" class="ui mini rounded image">
          <div class="content">
            {{this.Title}}
            <div class="sub header">E00{{this.Id}}
            </div>
          </div>
        </h4>
      </td>
      <td>{{this.Date}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Location}}</td>
      <td class="right aligned">
        <a href="/events/{{this.Id}}" class="ui button">View</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="5">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item active">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr>
  </tfoot>
</table>
<!-- table end -->
<!-- today start -->
<div style="margin: 4rem 0;">
  <h3 class="heading-tertiary">Upcoming Events</h3>
  <div class="ui message">
    <div class="header">Tomarrow</div>
    <p>An event is scheduled to be held on tomarrow</p>
    <a href="#" class="ui secondary button">View</a>
  </div>
</div>
<!-- today end -->